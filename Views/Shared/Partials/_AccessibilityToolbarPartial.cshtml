<!-- Accessibility Toolbar (DGA Standard) -->
<div class="accessibility-toolbar d-none d-md-block bg-neutral-50" role="banner" aria-label="علامة تبويب شريط أدوات" style="height: 40px;">
    <div class="container-custom h-100">
        <div class="d-flex justify-content-end align-items-center h-100">
            <nav class="accessibility-nav" aria-label="علامة تبويب أدوات">
                <div class="flex items-center gap-2">
                    <button class="btn btn-sm accessibility-btn" 
                            title="علامة تبويب أداة" 
                            aria-label="علامة تبويب وصف الأداة"
                            type="button"
                            id="tts-button">
                        <i class="hgi hgi-microphone" aria-hidden="true"></i>
                        <span class="sr-only">علامة تبويب أداة</span>
                    </button>
                    <button class="btn btn-sm accessibility-btn" 
                            title="علامة تبويب أداة" 
                            aria-label="علامة تبويب وصف الأداة"
                            type="button"
                            id="decrease-font-btn">
                        <i class="hgi hgi-minus" aria-hidden="true"></i>
                        <span class="sr-only">علامة تبويب أداة</span>
                    </button>
                    <button class="btn btn-sm accessibility-btn" 
                            title="علامة تبويب أداة" 
                            aria-label="علامة تبويب وصف الأداة"
                            type="button"
                            id="increase-font-btn">
                        <i class="hgi hgi-plus" aria-hidden="true"></i>
                        <span class="sr-only">علامة تبويب أداة</span>
                    </button>
                    <button class="btn btn-sm accessibility-btn" 
                            title="علامة تبويب أداة" 
                            aria-label="علامة تبويب وصف الأداة"
                            type="button"
                            id="theme-toggle-btn">
                        <i class="hgi hgi-sun" aria-hidden="true"></i>
                        <span class="sr-only">علامة تبويب أداة</span>
                    </button>
                </div>
            </nav>
        </div>
    </div>
</div>
